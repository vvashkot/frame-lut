# Server Configuration
PORT=8080
NODE_ENV=development

# Public URL (for ngrok or production)
# Set this to your ngrok URL when using ngrok for OAuth
# Example: https://abc123xyz.ngrok-free.app
PUBLIC_URL=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Processing
TMP_DIR=/tmp/archon-lut
MAX_INPUT_GB=25
FFMPEG_PATH=ffmpeg

# Frame.io API Configuration
FRAMEIO_BASE_URL=https://api.frame.io/v4

# User OAuth Configuration (if using user-delegated auth)
FRAMEIO_CLIENT_ID=your_client_id_here
FRAMEIO_CLIENT_SECRET=your_client_secret_here

# Server-to-Server OAuth Configuration (if using S2S auth)
FRAMEIO_S2S_CLIENT_ID=your_s2s_client_id_here
FRAMEIO_S2S_CLIENT_SECRET=your_s2s_client_secret_here
FRAMEIO_S2S_ORG_ID=your_org_id_here

# Webhook Security
FRAMEIO_WEBHOOK_SECRET=your_webhook_secret_here

# Storage Configuration
STORAGE_MODE=local
# For S3 storage:
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key

# For GCS storage:
# GCS_BUCKET=your-bucket-name

# Authentication
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Queue Configuration
QUEUE_CONCURRENCY=2
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=2500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100